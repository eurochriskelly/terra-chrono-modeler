{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2020",
        "module": "CommonJS",
        "noImplicitAny": false,
        "sourceMap": false,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        ".storybook"
    ]
}
